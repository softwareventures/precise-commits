{
  "name": "@softwareventures/precise-commits",
  "version": "0.0.0-development",
  "description": "precise-commits",
  "author": "James Henry <james@henry.sc>",
  "contributors": [
    "Daniel Cassidy <mail@danielcassidy.me.uk>"
  ],
  "homepage": "https://github.com/softwareventures/precise-commits",
  "bugs": "https://github.com/softwareventures/precise-commits/issues",
  "repository": "github:softwareventures/precise-commits",
  "license": "MIT",
  "scripts": {
    "pre-commit": "node lib/cli.js",
    "cz": "git-cz",
    "fix": "tsc --noEmit && prettier --write .",
    "lint": "tsc --noEmit && prettier --check .",
    "prepare": "husky install && rimraf lib && tsc",
    "semantic-release": "semantic-release",
    "test": "yarn && jest"
  },
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "files": [
    "lib"
  ],
  "engines": {
    "node": "^14 || ^16 || >=18"
  },
  "dependencies": {
    "@softwareventures/array": "6.0.3",
    "@softwareventures/nullable": "3.1.0",
    "execa": "5.1.1",
    "find-up": "5.0.0",
    "glob": "8.0.3",
    "ignore": "5.2.1",
    "mri": "1.2.0",
    "ora": "5.4.1",
    "tslib": "2.6.0",
    "unknown": "0.2.5"
  },
  "peerDependencies": {
    "prettier": ">=1.8.0"
  },
  "devDependencies": {
    "@softwareventures/prettier-config": "4.0.0",
    "@softwareventures/semantic-release-config": "3.1.0",
    "@softwareventures/tsconfig": "7.0.0",
    "@types/find-up": "2.1.1",
    "@types/glob": "8.0.0",
    "@types/jest": "29.5.3",
    "@types/mkdirp": "1.0.2",
    "@types/node": "16.18.39",
    "@types/prettier": "2.7.3",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.3",
    "jest": "29.6.2",
    "mkdirp": "1.0.4",
    "prettier": "2.8.8",
    "rimraf": "3.0.2",
    "semantic-release": "19.0.5",
    "ts-jest": "29.1.1",
    "typescript": "4.9.5"
  },
  "prettier": "@softwareventures/prettier-config",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "extends": "@softwareventures/semantic-release-config"
  },
  "jest": {
    "globalSetup": "<rootDir>/test/global-setup.js",
    "globalTeardown": "<rootDir>/test/global-teardown.js",
    "watchPathIgnorePatterns": [
      "<rootDir>/tmp"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
