{
  "name": "@softwareventures/precise-commits",
  "version": "0.0.0-development",
  "description": "precise-commits",
  "author": "James Henry <james@henry.sc>",
  "contributors": [
    "Daniel Cassidy <mail@danielcassidy.me.uk>"
  ],
  "homepage": "https://github.com/softwareventures/precise-commits",
  "bugs": "https://github.com/softwareventures/precise-commits/issues",
  "repository": "github:softwareventures/precise-commits",
  "license": "MIT",
  "scripts": {
    "pre-commit": "node bin/index.js",
    "prepare": "husky install && rimraf lib && tsc",
    "cz": "git-cz",
    "fix": "tsc --noEmit && prettier --write .",
    "lint": "tsc --noEmit && prettier --check .",
    "semantic-release": "semantic-release",
    "test": "yarn && jest"
  },
  "main": "lib/index.js",
  "bin": "bin/index.js",
  "files": [
    "bin",
    "lib"
  ],
  "engines": {
    "node": "^12 || ^14 || ^16 || >=17"
  },
  "dependencies": {
    "diff-match-patch": "1.0.5",
    "execa": "5.1.1",
    "find-up": "2.1.0",
    "glob": "7.2.0",
    "ignore": "5.1.9",
    "mri": "1.2.0",
    "ora": "5.4.1",
    "unknown": "0.2.5"
  },
  "peerDependencies": {
    "prettier": ">=1.8.0"
  },
  "devDependencies": {
    "@softwareventures/nullable": "2.0.0",
    "@softwareventures/prettier-config": "1.0.3",
    "@softwareventures/semantic-release-config": "2.0.0",
    "@types/diff-match-patch": "1.0.32",
    "@types/find-up": "2.1.1",
    "@types/jest": "27.0.3",
    "@types/mkdirp": "1.0.1",
    "@types/prettier": "2.4.2",
    "cz-conventional-changelog": "3.3.0",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "mkdirp": "0.5.5",
    "prettier": "2.4.1",
    "rimraf": "3.0.2",
    "semantic-release": "17.4.7",
    "ts-jest": "27.0.7",
    "typescript": "4.5.2"
  },
  "prettier": "@softwareventures/prettier-config",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "extends": "@softwareventures/semantic-release-config"
  },
  "jest": {
    "globalSetup": "<rootDir>/test/global-setup.js",
    "globalTeardown": "<rootDir>/test/global-teardown.js",
    "watchPathIgnorePatterns": [
      "<rootDir>/tmp"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
