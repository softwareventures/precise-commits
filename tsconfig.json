{
  "extends": "@softwareventures/tsconfig",
  "compilerOptions": {
    "target": "es5",
    "noUnusedParameters": true,
    "allowUnreachableCode": true,
    "removeComments": true,
    "sourceMap": false,
    "pretty": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "./lib",
    "types": ["jest", "node"],
    "lib": ["es2016"],
    "downlevelIteration": false,
    "forceConsistentCasingInFileNames": false,
    "importHelpers": false,
    "inlineSources": false,
    "resolveJsonModule": false,
    "stripInternal": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
