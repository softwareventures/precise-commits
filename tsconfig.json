{
  "extends": "@softwareventures/tsconfig",
  "compilerOptions": {
    "allowUnreachableCode": true,
    "removeComments": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "./lib",
    "types": ["jest", "node"],
    "downlevelIteration": false,
    "importHelpers": false,
    "resolveJsonModule": false
  },
  "include": ["src/**/*.ts"]
}
